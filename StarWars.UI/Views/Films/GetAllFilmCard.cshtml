@{
    ViewData["Title"] = "Character Card Page";
}
@model List<FilmDTO>

<div class="container-fluid" style="margin:3px;">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Film Cards</h1>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="row;" style="margin:10px">

                <!-- Earnings (Monthly) Card Example -->
                <div class="card" style="width:260px; height:450px">
                    <img src="~/img/@item.Img" class="card-img-top" alt="Chararacter" style="height:200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">Director: @item.Director</p>
                        <p class="card-text">Producer: @item.Producer</p>
                        <p class="card-text">Producer: @item.Release_date</p>
                        <a href="#" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>                